                    <div id="button-container"><button type="button" id="sendOtpButton">Send OTP</button> <button type="button" id="verifyOtpButton" disabled>Verify OTP</button></div>
                    <input type="text" id="otpInput" name="otpInput" placeholder="Enter OTP" required /> <button type="submit" class="submit">Submit</button>
